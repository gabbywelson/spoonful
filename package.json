{
  "name": "spoonful",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "npm run dev -w @spoonful/web",
    "dev:convex": "npm run dev -w @spoonful/convex",
    "dev:mobile": "npm run dev -w @spoonful/mobile",
    "build": "npm run build -w @spoonful/web",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "npm run typecheck --workspaces --if-present"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "expo": "^54.0.31"
  }
}
